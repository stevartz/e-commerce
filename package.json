{
  "name": "upsidle",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:stevartz/e-commerce.git",
  "author": "Eric Opoku <eric.opoku20@yahoo.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.14.0",
    "npm": "please-use-yarn",
    "yarn": ">=1.22.17"
  },
  "scripts": {
    "format-api": "run-script-os",
    "format-api:windows": "cd api && gradlew.bat spotlessApply",
    "format-api:nix": "cd ./api && ./gradlew spotlessApply",
    "format-check-api": "run-script-os",
    "format-check-api:windows": "cd api && gradlew.bat spotlessCheck",
    "format-check-api:nix": "cd ./api && ./gradlew spotlessCheck",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "run-script-os": "^1.1.6"
  }
}
